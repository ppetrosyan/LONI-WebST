<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>ConfigurationServlet</servlet-name>
    <servlet-class>edu.ucla.loni.pipeline.server.ConfigurationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ConfigurationServlet</servlet-name>
    <url-pattern>/ConfigurationServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>edu.ucla.loni.pipeline.server.FileUploadServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/FileUploadServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>SimulatedDataServlet</servlet-name>
    <servlet-class>edu.ucla.loni.pipeline.server.SimulatedDataServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SimulatedDataServlet</servlet-name>
    <url-pattern>/SimulatedDataServlet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>LONI_Pipeline_Server_Terminal.html</welcome-file>
  </welcome-file-list>

</web-app>
